  <script>
    const nutritionData = {
      "green": {
        name: "Green Tea",
        nutrition: "Classic green tea. (Nutrition varies by blend.)"
      },
      "black": {
        name: "Black Tea",
        nutrition: "Classic black tea. (Nutrition varies by blend.)"
      },
      "lemon-honey-black": {
        name: "Lemon Honey Black Tea – Sun Drip",
        nutrition: "<strong>Nutrition (per 16 oz can):</strong> ~70 calories, 17g sugar"
      },
      "peach-green": {
        name: "Peach Green Tea – Peach Fade",
        nutrition: "<strong>Nutrition (per 16 oz can):</strong> ~50 calories, 12g sugar"
      },
      "hibiscus-berry": {
        name: "Hibiscus Berry – Crimson Rush",
        nutrition: "<strong>Nutrition (per 16 oz can):</strong> ~60 calories, 15g sugar<br><em>High in Vitamin C & antioxidants</em>"
      },
      "mango-citrus": {
        name: "Mango Citrus – Mango Voltage",
        nutrition: "<strong>Nutrition (per 16 oz can):</strong> ~80 calories, 20g sugar<br><em>Vitamin C + Potassium</em>"
      },
      "sweet-black": {
        name: "Sweet Black Tea (Extra Sugar) – Street Sweet",
        nutrition: "<strong>Nutrition (per 16 oz can):</strong> (Extra sugar – contact for details!)"
      }
    };

    const flavorSelect = document.getElementById('flavor-select');
    const nutritionInfo = document.getElementById('nutrition-info');

    flavorSelect.addEventListener('change', function() {
      const selected = flavorSelect.value;
      if (nutritionData[selected]) {
        nutritionInfo.innerHTML = 
          `<div>
            <strong>${nutritionData[selected].name}</strong><br>
            ${nutritionData[selected].nutrition}
            <div class="payment-info">
              PAY WITH <a href="https://cash.app/$findtheself" target="_blank">CASH APP</a> OR 
              <a href="https://paypal.me/Iamdoyen" target="_blank">PAY PAL</a>, SEND ME A MESSAGE ON 
              <a href="https://instagram.com/kanticedtea" target="_blank">INSTAGRAM</a> FOR DELIVERY INFO
            </div>
          </div>`;
        nutritionInfo.style.display = 'block';
      } else {
        nutritionInfo.style.display = 'none';
      }
    });
  </script>
